                            <input type="text" class="form-control" id="name" placeholder="Image Link">
                        </div>

                        <div class="d-flex flex-row align-items-center justify-content-between">
                            <a href="/login">Login</a>
                            <button class="btn btn-primary">Create Account <i class="bi bi-check2-square"></i></button>
