
<%- include ('partials/header.ejs') %>

<div class="container">
	<div class="row">

        <div class="col-md-4">
            <div class="h1 text-center my-4" style="color: transparent;">Image</div>
            <img class="rounded-circle img-fluid mx-auto" style="width: 75%;" src="<%= user.image %>">
        </div>

        <div class="container-fluid col-md-8">

            <div class="h1 col-12 text-center my-3 mx-auto"><%= user.username %></div>

            
            <div class="container row">
                <div class="col-12">
                    <form class="container-fluid mx-auto" action="/updateUser/<%= user._id %>?_method=PUT" method="POST">
                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <input class="form-control" type="text" name="user[username]" value="<%= user.username %>">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Image Link</label>
                            <input class="form-control" type="text" name="user[image]" value="<%= user.image %>">
                        </div>
            
                        <div class="card-footer">
                            <button class="btn btn-outline-success">Update your info</button>
                        </div>
                    </form>

                    <button class="btn btn-outline-info mx-4">
                        <a href="/user/<%= user._id %>/blogsAndComments">Show your Blogs And Comments</a>
                    </button>

                </div>
            </div>

        </div>

    </div>
</div>

<%- include ('partials/footer.ejs') %>
